<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.deltaCode.omnicron.app.Chemistry.ChemistryHome">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Laws"
            android:id="@+id/ToGasLawsFromChemistry" android:layout_alignParentTop="true"
            android:layout_marginTop="180dp" android:layout_alignRight="@+id/ToTableFromChemistry"
            android:layout_alignEnd="@+id/ToTableFromChemistry" android:layout_alignLeft="@+id/ToTableFromChemistry"
            android:layout_alignStart="@+id/ToTableFromChemistry"
            android:onClick="ToGasLawsFromChemistry"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodic Table of Elements"
            android:id="@+id/ToTableFromChemistry"
            android:layout_marginTop="33dp" android:layout_below="@+id/ToGasLawsFromChemistry" android:layout_centerHorizontal="true"
            android:onClick="ToTableFromChemistry"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Converter"
            android:id="@+id/ToConverterFromChemistry" android:layout_below="@+id/ToTableFromChemistry" android:layout_alignRight="@+id/ToTableFromChemistry"
            android:layout_alignEnd="@+id/ToTableFromChemistry" android:layout_marginTop="34dp"
            android:layout_alignLeft="@+id/ToTableFromChemistry" android:layout_alignStart="@+id/ToTableFromChemistry"
            android:onClick="ToConverterFromChemistry"
            />
    <TextView android:text="Chemistry"
              android:textSize="50sp"
              android:layout_alignParentTop="true"
              android:layout_marginTop="50dp"
              android:layout_width="wrap_content"
              android:layout_marginLeft="60dp"
              android:layout_height="wrap_content"
              android:id="@+id/textView"/>
    />
</RelativeLayout>
