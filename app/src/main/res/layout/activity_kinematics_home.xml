<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Kinematics"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Projectiles"
            android:textSize="40dp"
            android:width="300dp"
            android:layout_marginTop="100dp"
            android:onClick="ToProjectilesFromKinematics"
            android:id="@+id/ToProjectilesFromKinematics" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motion"
            android:textSize="40dp"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:onClick="ToMotionFromKinematics"
            android:id="@+id/ToMotionFromKinematics" android:layout_gravity="center_horizontal"/>

</LinearLayout>