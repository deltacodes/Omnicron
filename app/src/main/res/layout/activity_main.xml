<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:text="Omnicron"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
            android:text="Physics Calculator"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinematics"
            android:textSize="40dp"
            android:width="300dp"
            android:onClick="ToKinematicsFromHomeMethod"
            android:id="@+id/ToKinematicsFromHome" android:layout_below="@+id/textView" android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dynamics"
            android:textSize="40dp"
            android:width="300dp"
            android:id="@+id/ToDynamicsFromHome" android:layout_below="@+id/ToKinematicsFromHome" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textSize="40dp"
            android:width="300dp"
            android:id="@+id/ToKEnergyFromHome" android:layout_below="@+id/ToDynamicsFromHome" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

</RelativeLayout>
