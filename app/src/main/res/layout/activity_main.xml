<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <TextView
            android:text="Omnicron"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:id="@+id/textView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics"
            android:textSize="40dp"
            android:width="300dp"
            android:onClick="ToPhysicsFromHomeMethod"
            android:id="@+id/ToKinematicsFromHome"
            android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemistry"
            android:textSize="40dp"
            android:width="300dp"
            android:onClick="ToChemistryFromHomeMethod"
            android:id="@+id/ToDynamicsFromHome"
            android:layout_below="@+id/ToKinematicsFromHome" android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

</RelativeLayout>
